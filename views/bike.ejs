<main class="min-h-screen px-6 py-10">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold text-lime-400">Biking Progress</h1>
        <button class="text-red-400 hover:text-red-300 flex items-center gap-1">
            <span class="material-symbols-outlined">delete</span> Reset
        </button>
    </div>

    <div class="bg-zinc-800 p-6 rounded-2xl mb-10">
        <div class="mb-4">
            <label class="block text-sm mb-1">Progress toward 32 km/h</label>
            <div class="w-full h-4 bg-zinc-700 rounded-full">
                <div class="h-full bg-lime-400 rounded-full" style="width: 65%;"></div>
            </div>
        </div>

        <div class="grid grid-cols-2 gap-6 mt-6 text-sm">
            <div>
                <p class="text-gray-400">Current Pace</p>
                <p class="text-xl font-semibold">27.4 km/h</p>
            </div>
            <div>
                <p class="text-gray-400">Best Pace</p>
                <p class="text-xl font-semibold">29.0 km/h</p>
            </div>
            <div>
                <p class="text-gray-400">Target Pace</p>
                <p class="text-xl font-semibold">32.0 km/h</p>
            </div>
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-gray-400">Days Remaining</p>
                    <p class="text-xl font-semibold">18 days</p>
                </div>
                <button onclick="openModal()" class="text-lime-400 hover:underline text-sm">Edit</button>
            </div>
        </div>
    </div>

    <div class="bg-zinc-800 p-6 rounded-2xl mb-8">
        <h2 class="text-lg font-semibold mb-4">Pace Over Time</h2>
        <div class="h-64 bg-zinc-700 rounded-md flex items-center justify-center text-gray-400">
            (Chart.js)
        </div>
    </div>

    <div class="flex justify-between">
        <button onclick="openAddSessionModal()" class="bg-lime-400 text-black px-6 py-3 rounded-full font-semibold hover:bg-lime-300 transition">
            Add Training Session
        </button>
    </div>

    <!-- Edit Modal -->
    <div id="editModal" class="fixed inset-0 bg-black bg-opacity-60 flex items-center justify-center z-50 hidden">
        <div class="bg-zinc-800 p-6 rounded-xl w-full max-w-md shadow-xl">
            <h2 class="text-xl font-bold text-lime-400 mb-4">Edit Goal</h2>
            <form action="/sports/bike/edit" method="POST" class="space-y-5">
                <div>
                    <label for="targetPace" class="block text-sm mb-1">Target Pace (km/h)</label>
                    <input type="text" id="targetPace" name="targetPace" class="w-full px-4 py-2 rounded-lg bg-zinc-700 text-white" placeholder="e.g. 32.0" />
                </div>
                <div>
                    <label for="endDate" class="block text-sm mb-1">Goal End Date</label>
                    <input type="date" id="endDate" name="endDate" class="w-full px-4 py-2 rounded-lg bg-zinc-700 text-white" />
                </div>
                <div class="flex justify-end gap-4 pt-2">
                    <button type="button" onclick="closeModal()" class="text-gray-400 hover:underline">Cancel</button>
                    <button type="submit" class="bg-lime-400 text-black px-4 py-2 rounded-lg font-semibold hover:bg-lime-300">Save</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Add Session Modal -->
    <div id="addSessionModal" class="fixed inset-0 bg-black bg-opacity-60 flex items-center justify-center z-50 hidden">
        <div class="bg-zinc-800 p-6 rounded-xl w-full max-w-md shadow-xl">
            <h2 class="text-xl font-bold text-lime-400 mb-4">Add Training Session</h2>
            <form action="/sports/bike/add" method="POST" class="space-y-5">
                <div>
                    <label for="sessionDate" class="block text-sm mb-1">Date</label>
                    <input type="date" id="sessionDate" name="sessionDate" required class="w-full px-4 py-2 rounded-lg bg-zinc-700 text-white" />
                </div>
                <div>
                    <label for="sessionPace" class="block text-sm mb-1">Pace (km/h)</label>
                    <input type="text" id="sessionPace" name="sessionPace" required class="w-full px-4 py-2 rounded-lg bg-zinc-700 text-white" placeholder="e.g. 28.5" />
                </div>
                <div class="flex justify-end gap-4 pt-2">
                    <button type="button" onclick="closeAddSessionModal()" class="text-gray-400 hover:underline">Cancel</button>
                    <button type="submit" class="bg-lime-400 text-black px-4 py-2 rounded-lg font-semibold hover:bg-lime-300">Add</button>
                </div>
            </form>
        </div>
    </div>
</main>
