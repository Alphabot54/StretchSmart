<main class=" flex items-center justify-center">
    <div class=" w-full max-w-sm bg-zinc-800 p-6 rounded-2xl ">
        <h1 class="text-3xl font-bold text-lime-400 text-center mb-8">StretchSmart</h1>

        <form action="/login" method="post" class="space-y-5">
            <div>
                <label class="block text-sm mb-1" for="username">Username</label>
                <input
                        type="text"
                        id="username"
                        name="username"
                        required
                        class="w-full px-4 py-2 rounded-full bg-zinc-700 text-white placeholder-gray-400 "
